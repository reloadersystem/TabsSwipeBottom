<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mainContent"
        android:layout_width="match_parent"
        android:layout_height="780dp">

    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/vp_mainContent"
        android:background="?android:attr/listDivider" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_mainIni"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/divider"
        android:elevation="8dp"
        app:itemIconTint="@drawable/custom_bottommenu"
        app:itemTextColor="@drawable/custom_bottommenu"
        app:menu="@menu/menu_master4items">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>